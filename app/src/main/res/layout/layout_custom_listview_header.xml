<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_listview_border"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/drop_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_listview_layout_height"
        android:background="@drawable/stroke_listview_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_listview_border"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19.01"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_day_of_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="금"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_incoming"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                        android:gravity="center"
                        android:text="@string/incoming"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_incoming_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/incoming" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                        android:gravity="center"
                        android:text="@string/spending"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_spending_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/spending" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.01"
                android:background="#aaa" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                    android:gravity="center"
                    android:text="@string/total"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/incoming" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_listview_add_layout_height"
        android:background="@drawable/stroke_listview_border"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_listview_border"
            android:gravity="center"
            android:text="16:13"
            android:textColor="@color/black"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_listview_border"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_spending"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="카드"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="식비"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_listview_border"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="99,900"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#aaa" />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="회사사람들이랑 밥먹음"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

