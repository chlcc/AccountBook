<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_listview_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/drop_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_listview_layout_height"
            android:background="@drawable/stroke_listview_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_day_of_week"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stroke_listview_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="@dimen/custom_listview_text_wrapper_layout_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                                android:gravity="center"
                                android:text="@string/incoming"
                                android:background="@drawable/rounded_text_bg"
                                android:textSize="10dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_incoming_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                            android:layout_marginRight="@dimen/custom_listview_tv_default_margin_right"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/incoming"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="@dimen/custom_listview_text_wrapper_layout_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                                android:gravity="center"
                                android:text="@string/spending"
                                android:background="@drawable/rounded_text_bg"
                                android:textSize="10dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_spending_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                            android:layout_marginRight="@dimen/custom_listview_tv_default_margin_right"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/spending"
                            android:textSize="11dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.01"
                    android:background="#aaa" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="@dimen/custom_listview_text_wrapper_layout_width"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                            android:gravity="center"
                            android:text="@string/total"
                            android:background="@drawable/rounded_text_bg"
                            android:textSize="10dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                        android:layout_marginRight="@dimen/custom_listview_tv_default_margin_right"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/black"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_listview_add_layout_height"
            android:background="@drawable/stroke_listview_border"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_text_bg"
                        android:gravity="center"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_spending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@drawable/rounded_text_bg"
                        android:gravity="center"
                        android:textSize="10dp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stroke_listview_border"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/custom_listview_tv_default_margin_right"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#aaa" />


                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/custom_listview_tv_default_margin_left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>